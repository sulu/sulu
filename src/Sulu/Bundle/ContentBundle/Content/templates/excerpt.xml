<?xml version="1.0" ?>

<template xmlns="http://schemas.sulu.io/template/template"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/template-1.0.xsd">

    <key>excerpt</key>

    <controller>not in use</controller>
    <view>not in use</view>
    <cacheLifetime>1</cacheLifetime>
    <internal>true</internal>

    <properties>
        <property name="title" type="text_line">
            <meta>
                <title lang="de">Titel</title>
                <title lang="en">Title</title>
            </meta>

            <tag name="sulu.search.field"/>
        </property>

        <property name="more" type="text_line">
            <meta>
                <title lang="de">Text für weiterführenden Link</title>
                <title lang="en">Text for more link</title>
            </meta>

            <tag name="sulu.search.field"/>
        </property>

        <property name="description" type="text_editor">
            <meta>
                <title lang="de">Beschreibung</title>
                <title lang="en">Description</title>
            </meta>

            <tag name="sulu.search.field"/>
        </property>

        <property name="categories" type="category_list">
            <meta>
                <title lang="de">Kategorien</title>
                <title lang="en">Categories</title>
            </meta>

            <tag name="sulu.search.field" type="array"/>
        </property>

        <property name="tags" type="tag_list">
            <meta>
                <title lang="de">Tags</title>
                <title lang="en">Tags</title>
            </meta>

            <tag name="sulu.search.field" type="tags"/>
        </property>

        <property name="icon" type="media_selection">
            <meta>
                <title lang="de">Icon</title>
                <title lang="en">Icon</title>
            </meta>

            <tag name="sulu.search.field" type="json"/>
        </property>

        <property name="images" type="media_selection">
            <meta>
                <title lang="de">Bilder</title>
                <title lang="en">Images</title>
            </meta>

            <tag name="sulu.search.field" type="json"/>
        </property>
    </properties>
</template>
