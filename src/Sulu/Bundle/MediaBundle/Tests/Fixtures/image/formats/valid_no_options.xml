          xsi:schemaLocation="http://schemas.sulu.io/media/formats http://schemas.sulu.io/media/formats-1.0.xsd">

    <format>
        <name>640x480</name>
        <commands>
            <command>
                <action>scale</action>
                <parameters>
                    <parameter name="x">640</parameter>
                    <parameter name="y">480</parameter>
                    <parameter name="forceRatio">false</parameter>
                </parameters>
            </command>
        </commands>
    </format>
</formats>
