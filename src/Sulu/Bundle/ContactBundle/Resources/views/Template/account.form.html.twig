{% extends "SuluContactBundle:Template:base.form.html.twig" %}

{% block static %}
    <div class="form-horizontal changeListener">
        <div class="form-group grid-row small">
            <label for="name" class="required"><%=translate('contact.accounts.name')%></label>
            <div>
                <input class="form-element" type="text" id="name"
                       data-validation-required="true"
                       data-validation-min-length="3"
                       data-mapper-property="name"/>
            </div>
        </div>
        <div class="form-group grid-row small">
            <label for="corporation"><%=translate('contact.accounts.corporation')%></label>
            <div>
                <input class="form-element" type="text" id="corporation" data-mapper-property="corporation"/>
            </div>
        </div>
        <div class="grid-row small">
            <div class="grid-col-6">
                <div class="form-group">
                    <label for="companyInput"><%=translate('contact.accounts.company')%></label>
                    <div id="company"></div>
                </div>

                <input type="hidden" id="accountType" data-mapper-property="type"/>
            </div>
            <div class="grid-col-6">
                <div class="form-group">
                    <label for="responsiblePerson"><%=translate('contact.accounts.responsiblePerson')%></label>

                    <div id="responsiblePerson" data-mapper-property="responsiblePerson" data-type="husky-select"
                         data-form="true"></div>
                </div>
            </div>
        </div>

        <div class="grid-row">
            <div class="grid-col-6">
                <div class="form-group">
                    <label for="vat"><%=translate('contact.accounts.uid')%></label>

                    <div id="vat"
                         data-form="true"
                         data-type="vat-input"
                         data-mapper-property="uid"></div>
                </div>
            </div>
            <div class="grid-col-6">
                <div class="form-group">
                    <label for="deactivated"><%=translate('public.locked')%></label>
                    <div>
                        <div class="custom-checkbox">
                            <input class="form-element husky-validate" type="checkbox" id="deactivated" data-mapper-property="disabled">
                            <span class="icon"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block tags %}

    {{ parent() }}

    <div class="grid form-horizontal changeListener">
        <div class="grid-row form-group">
            <label class="top p-top-10"><%= translate('contact.contacts.categories.label') %></label>

            <div id="categories">
                <div
                        data-aura-component="datagrid@husky"
                        data-aura-url="/admin/api/categories?flat=true&sortBy=depth&sortOrder=asc"
                        data-aura-result-key="categories"
                        data-aura-pagination="false"
                        data-aura-instance-name="categories"
                        data-aura-children-property-name="hasChildren"
                        data-aura-resize-listeners="false"
                        data-aura-view-options='{"table":{"openPathToSelectedChildren":"true","noItemsText":"sulu.category.no-categories-available","showHead":false,"cssClass":"white-box","selectItem":{"type":"checkbox","inFirstCell":true}}}'
                        data-aura-matchings='[{"name":"name","content":"Name"},{"name":"id","disabled":true},{"name":"children","disabled":true},{"name":"parent","disabled":true}]'
                        data-form="true"
                        data-type="categoryList"
                        data-mapper-property="categories"
                        data-aura-only-select-leaves="true"
                        id="categoriesList">
                </div>
            </div>
        </div>
    </div>

{% endblock %}
