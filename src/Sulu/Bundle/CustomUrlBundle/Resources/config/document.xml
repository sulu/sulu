<?xml version="1.0" encoding="UTF-8"?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="Sulu\Component\CustomUrl\Repository\CustomUrlRepositoryInterface"
            class="Sulu\Component\CustomUrl\Repository\CustomUrlRepository">
            <argument type="service" id="doctrine" />
            <argument type="service" id="sulu_page.content_repository" />
            <argument type="service" id="sulu_custom_urls.domain_generator" />
            <argument type="service" id="sulu_core.webspace.webspace_manager" />
        </service>

        <service id="sulu_custom_urls.repository" alias="Sulu\Component\CustomUrl\Repository\CustomUrlRepositoryInterface" />

        <service id="sulu_custom_urls.manager" class="Sulu\Component\CustomUrl\Manager\CustomUrlManager">
            <argument type="service" id="sulu_custom_urls.repository"/>
            <argument type="string">%kernel.environment%</argument>
            <argument type="service" id="sulu_document_manager.document_domain_event_collector"/>
            <argument type="service" id="property_accessor" />
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument type="service" id="sulu_custom_urls.domain_generator" />
        </service>

        <service id="sulu_custom_urls.event_subscriber.invalidation"
                 class="Sulu\Component\CustomUrl\Document\Subscriber\InvalidationSubscriber">
            <argument type="service" id="sulu_custom_urls.repository"/>
            <argument type="service" id="sulu_http_cache.cache_manager" on-invalid="null"/>
            <argument type="service" id="request_stack"/>

            <tag name="sulu_document_manager.event_subscriber"/>
        </service>

        <service id="sulu_custom_urls.domain_generator" class="Sulu\Component\CustomUrl\Generator\Generator">
            <argument type="service" id="sulu_core.webspace.webspace_manager.url_replacer"/>
        </service>

        <service id="sulu_custom_urls.url_provider" class="Sulu\Component\CustomUrl\WebspaceCustomUrlProvider">
            <argument type="service" id="sulu_custom_urls.repository"/>

            <tag name="sulu.webspace.url_provider"/>
        </service>

        <service id="sulu_custom_urls.custom_url_controller"
                 class="Sulu\Bundle\CustomUrlBundle\Controller\CustomUrlController"
                 public="true">
            <argument type="service" id="fos_rest.view_handler"/>
            <argument type="service" id="sulu_custom_urls.manager"/>
            <argument type="service" id="request_stack"/>
            <argument type="service" id="sulu_custom_urls.repository"/>

            <tag name="sulu.context" context="admin"/>
        </service>

        <service id="sulu_custom_urls.custom_url_route_controller"
                 class="Sulu\Bundle\CustomUrlBundle\Controller\CustomUrlRouteController"
                 public="true">
            <argument type="service" id="fos_rest.view_handler"/>
            <argument type="service" id="doctrine.orm.entity_manager"/>
            <argument type="service" id="request_stack"/>

            <tag name="sulu.context" context="admin"/>
        </service>
    </services>
</container>
