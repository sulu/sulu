<?xml version="1.0" ?>
<form xmlns="http://schemas.sulu.io/template/template"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/properties-1.0.xsd">
    <properties>
        <property name="search_result" type="search_result" colspan="9">
            <meta>
                <title lang="en">Search Engine Results Pages Preview (SERP)</title>
                <title lang="de">Suchergebnis Vorschau (SERP)</title>
            </meta>
        </property>
        <property name="title" type="text_line">
            <meta>
                <title lang="en">Title (Meta title)</title>
                <title lang="de">Titel (Meta title)</title>
                <info_text lang="en">The meta title is limited to 55 characters.</info_text>
                <info_text lang="de">Der Meta-Titel ist auf 55 Zeichen limitiert.</info_text>
            </meta>
            <params>
                <param name="max_characters" value="55" />
            </params>
        </property>
        <property name="description" type="text_area">
            <meta>
                <title lang="en">Description (Meta Description)</title>
                <title lang="de">Beschreibung (Meta Description)</title>
                <info_text lang="en">The meta description is limited to 320 characters.</info_text>
                <info_text lang="de">Die Meta-Beschreibung ist auf 320 Zeichen limitiert.</info_text>
            </meta>
            <params>
                <param name="max_characters" value="320" />
            </params>
        </property>
        <property name="keywords" type="text_line">
            <meta>
                <title lang="en">Keywords (Meta Keywords)</title>
                <title lang="de">Keywords (Meta Keywords)</title>
                <info_text lang="en">Please use a maximum of 5 keywords, dependant from the content of the page, separated by commas.</info_text>
                <info_text lang="de">Bitte benutze maximal 5 Keywords, abh√§ngig vom Inhalt der Seite, getrennt durch Kommas.</info_text>
            </meta>
            <params>
                <param name="segment_delimiter" value="," />
                <param name="max_segments" value="5" />
            </params>
        </property>
        <property name="canonicalUrl" type="text_line">
            <meta>
                <title lang="en">Canonical URL (Canonical Tag)</title>
                <title lang="de">Canonical URL (Canonical Tag)</title>
            </meta>
        </property>
        <property name="noIndex" type="checkbox">
            <meta>
                <title lang="en">no-index (page will not be indexed by search engines)</title>
                <title lang="de">no-index (Seite wird nicht von Suchmaschinen indiziert)</title>
            </meta>
            <params>
                <param name="type" value="toggler" />
            </params>
        </property>
        <property name="noFollow" type="checkbox">
            <meta>
                <title lang="en">no-follow (links on this page will not be followed by the search engine)</title>
                <title lang="de">no-follow (Links auf der Seite wird von Suchmaschinen nicht gefolgt)</title>
            </meta>
            <params>
                <param name="type" value="toggler" />
            </params>
        </property>
        <property name="hideInSitemap" type="checkbox">
            <meta>
                <title lang="en">Hide in sitemap</title>
                <title lang="de">In Sitemap ausblenden</title>
            </meta>
            <params>
                <param name="type" value="toggler" />
            </params>
        </property>
    </properties>
</form>
