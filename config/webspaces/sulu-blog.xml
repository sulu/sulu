<?xml version="1.0" encoding="utf-8"?>
<webspace xmlns="http://schemas.sulu.io/webspace/webspace"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://schemas.sulu.io/webspace/webspace http://schemas.sulu.io/webspace/webspace-1.1.xsd">
    <name>Sulu Blog</name>
    <key>sulu-blog</key>

    <security>
        <system>Sulu Blog</system>
    </security>

    <localizations>
        <localization language="en" default="true"/>
    </localizations>

    <default-templates>
        <default-template type="page">homepage</default-template>
        <default-template type="home">homepage</default-template>
    </default-templates>

    <templates>
        <template type="search">search/search</template>
        <template type="error">error/error</template>
    </templates>

    <excluded-templates>
        <excluded-template>example</excluded-template>
    </excluded-templates>

    <navigation>
        <contexts>
            <context key="main">
                <meta>
                    <title lang="en">Main Navigation</title>
                    <title lang="de">Hauptnavigation</title>
                </meta>
            </context>
        </contexts>
    </navigation>

    <portals>
        <portal>
            <name>Sulu Blog</name>
            <key>sulu-blog</key>

            <environments>
                <environment type="prod">
                    <urls>
                        <url language="en">{host}/blog</url>
                    </urls>
                </environment>
                <environment type="stage">
                    <urls>
                        <url language="en">{host}/blog</url>
                    </urls>
                </environment>
                <environment type="test">
                    <urls>
                        <url language="en">{host}/blog</url>
                    </urls>
                </environment>
                <environment type="dev">
                    <urls>
                        <url language="en">{host}/blog</url>
                    </urls>
                    <custom-urls>
                        <custom-url>localhost/*</custom-url>
                    </custom-urls>
                </environment>
            </environments>
        </portal>
    </portals>
</webspace>
